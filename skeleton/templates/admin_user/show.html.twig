{% extends 'base.html.twig' %}

{% block title %}panneau utilisateur {% endblock %}

{% block body %}
    <h2>panneau utilisateur</h2>

    <nav>

    <a href="{{ path('article_index') }}">Articles</a>
        <a href="{{ path('comments_index') }}">Commentaire</a>
    </nav>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Mot de passe</th>
                <th>email</th>
                <th>IdRole</th>
                <th class="hide">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td><a id="edit" href="{{ path('user_edit', {'id': user.id}) }}">{{ user.username }}</a></td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.idRole }}</td>
                <td class="hide">
                   <span>{{ include('admin_user/_delete_form.html.twig') }}</span>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">auccun utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="new"> <a href="{{ path('user_new') }}">nouvel utilisateur</a></div>
    <div class="show"> cliquer sur le pseudo pour modifier</div>
{% endblock %}
